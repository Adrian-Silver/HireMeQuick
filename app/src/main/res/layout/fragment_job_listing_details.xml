<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".jobListing.jobFragments.JobListingDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/playerNameLinL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jobTitleDetailMtv"
                android:text="Job Title :"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#7C7070"
                android:layout_marginTop="24dp"
                android:paddingTop="4dp"
                android:layout_marginStart="6dp"
                android:paddingBottom="8dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jobTitleDetailEtv"
                android:text="Job Title :"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="#7C7070"
                android:layout_marginStart="6dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerAgeLinL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playerNameLinL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical" >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jobDescriptionDetailMtv"
                android:text="Job Description :"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#7C7070"
                android:layout_marginStart="6dp"
                android:paddingBottom="8dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/jobDescriptionDetailEtv"
                android:text="Job Description :"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="#7C7070"
                android:layout_marginStart="6dp"
                android:paddingBottom="8dp" />


        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayerEdit"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Edit"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playerAgeLinL"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayerDelete"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Delete"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPlayerEdit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>